{
    "compilerOptions": {
        "target": "ES2024",
        "module": "nodenext",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        "incremental": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts"]
}