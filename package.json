    "@google/genai": "^1.38.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.1.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "openai": "^6.17.0",
